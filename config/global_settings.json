{
  "author": "Your Name",
  "blog_url": "https://yourblog.com",
  "writing_style": {
    "target_word_count": 500,
    "min_word_count": 450,
    "max_word_count": 550,
    "paragraphs": {
      "sentences_per_paragraph": [2, 2],
      "prefer_short_paragraphs": true,
      "max_sentences_per_paragraph": 2
    },
    "tone": ["analytical", "contrarian", "data-driven", "business-focused"],
    "pronouns": "we",
    "include_personal_anecdotes": false,
    "voice_characteristics": [
      "analytical yet accessible",
      "contrarian but evidence-based", 
      "forward-looking with practical insights",
      "confident without being prescriptive",
      "business-impact focused"
    ]
  },
  "content_preferences": {
    "data_points_per_post": [2, 4],
    "include_charts": true,
    "cite_sources": true,
    "conclusion_cta": true,
    "opening_hook_required": true
  },
  "topics": {
    "primary": ["SaaS", "venture capital", "startups", "data analysis"],
    "avoid": []
  },
  "models": {
    "claude_sonnet": {
      "model": "claude-3-5-sonnet-20241022",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "gpt4": {
      "model": "gpt-4-turbo-preview",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "gemini": {
      "model": "gemini-2.5-pro",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "local": {
      "model": "qwen2.5:32b",
      "temperature": 0.8,
      "max_tokens": 2000
    }
  },
  "generation_settings": {
    "variations_per_model": 2,
    "total_cycles": 3,
    "refinements_cycle_2": 3,
    "final_candidates": 3
  },
  "scqa_planning": {
    "enabled": true,
    "opus_model": "claude-opus-4-1-20250805",
    "temperature": 0.3,
    "max_tokens": 1500,
    "structure_weight": 0.15,
    "confidence_threshold": 60,
    "fallback_enabled": true,
    "validation_enabled": true
  },
  "braintrust": {
    "enabled": true,
    "project_name": "evo-blog-generator",
    "log_generations": true,
    "log_evaluations": true,
    "log_comparisons": true,
    "run_factuality_checks": true,
    "auto_battle_evaluation": true,
    "experiment_tags": ["evolutionary", "blog", "generation"]
  }
}